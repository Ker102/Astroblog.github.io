---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const postsWithContent = await Promise.all(
	posts.map(async (post) => {
		const { Content } = await post.render();
		return { ...post, Content };
	}),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} — Blog`} description={SITE_DESCRIPTION} />
		<style>
			.layout-container {
				display: flex;
				gap: 3rem;
				width: min(1200px, 100%);
				margin: 0 auto;
				padding: clamp(1.5rem, 4vw, 3rem);
				align-items: flex-start;
			}
			aside {
				width: 280px;
				flex-shrink: 0;
				position: sticky;
				top: 2rem;
				background: rgba(var(--paper), 0.8);
				padding: 1.5rem;
				border-radius: 16px;
				border: 1px solid rgba(var(--gray), 0.1);
				backdrop-filter: blur(10px);
			}
			aside h3 {
				margin-top: 0;
				font-size: 1.2rem;
				margin-bottom: 1rem;
				border-bottom: 2px solid var(--accent);
				padding-bottom: 0.5rem;
				display: inline-block;
			}
			aside ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			aside li {
				margin-bottom: 0.75rem;
			}
			aside a {
				color: var(--gray-dark);
				text-decoration: none;
				font-size: 0.95rem;
				transition: color 0.2s;
				display: block;
				line-height: 1.4;
			}
			aside a:hover {
				color: var(--accent);
			}
			main {
				flex-grow: 1;
				min-width: 0; /* Prevent flex overflow */
			}
			.posts {
				display: flex;
				flex-direction: column;
				gap: clamp(2.5rem, 6vw, 4rem);
				margin: 0;
				padding: 0;
			}
			article {
				background: rgba(var(--paper), 0.95);
				border-radius: 32px;
				padding: clamp(2rem, 6vw, 3.5rem);
				box-shadow: var(--shadow);
				border: 1px solid rgba(var(--gray), 0.12);
				scroll-margin-top: 2rem;
			}
			article h2 {
				margin: 0 0 0.75rem;
				font-size: clamp(2rem, 3.2vw, 2.75rem);
				color: rgb(var(--black));
			}
			.meta {
				margin: 0 0 1.75rem;
				color: rgba(var(--gray-dark), 0.8);
				font-weight: 600;
				letter-spacing: 0.08em;
				text-transform: uppercase;
				font-size: 0.85rem;
			}
			article :global(img) {
				max-width: 100%;
				border-radius: 18px;
				box-shadow: var(--shadow);
			}
			article :global(p + p) {
				margin-top: 1.3rem;
			}
			article :global(h2),
			article :global(h3),
			article :global(h4) {
				margin-top: 2.75rem;
			}
			article :global(a) {
				color: var(--accent);
				text-decoration: none;
			}
			article :global(a:hover) {
				text-decoration: underline;
			}
			@media (max-width: 900px) {
				.layout-container {
					flex-direction: column-reverse; /* Content first on mobile */
					padding: 1rem;
				}
				aside {
					width: 100%;
					position: static;
					margin-bottom: 2rem;
				}
				article {
					padding: clamp(1.5rem, 8vw, 2.5rem);
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<div class="layout-container">
			<aside>
				<h3>Recent Posts</h3>
				<ul>
					{posts.map((post) => (
						<li>
							<a href={`#${post.slug}`}>{post.data.title}</a>
						</li>
					))}
				</ul>
			</aside>
			<main>
				<section class="posts">
					{
						postsWithContent.map(({ slug, data, Content }) => (
							<article id={slug}>
								<h2>{data.title}</h2>
								<p class="meta">
									<FormattedDate date={data.pubDate} />
									{data.tags?.length ? ` · ${data.tags.join(', ')}` : ''}
								</p>
								<Content />
							</article>
						))
					}
				</section>
			</main>
		</div>
		<Footer />
	</body>
</html>
